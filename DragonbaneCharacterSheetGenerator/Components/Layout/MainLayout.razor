@inherits LayoutComponentBase

@inject DragonbaneCharacterSheetGenerator.Services.IThemeService ThemeService

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <div>
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>
            <div>
                <button class="btn btn-outline-secondary" @onclick="ToggleTheme">Toggle theme</button>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var theme = await ThemeService.GetThemeAsync();
            // ensure persisted preference and apply via ThemeService (ThemeService will call JS)
            await ThemeService.SetThemeAsync(theme);
        }
    }

    private async Task ToggleTheme()
    {
        await ThemeService.ToggleThemeAsync();
    }
}
